#!/usr/bin/env python3
"""
Zeus â€” Monitor and manage coding Hippeis running in kitty windows.

Usage:
  zeus                              Live dashboard (default)
  zeus new -n NAME [-d DIR]         Launch a new tracked Hippeus kitty window
  zeus ls                           One-shot text listing
  zeus focus <ID>                   Focus a Hippeus kitty window (sway)
  zeus kill <ID>                    Close a Hippeus kitty window
"""

import sys
from pathlib import Path

# Find the zeus package:
#   - In dev: ../zeus/ relative to this script (repo checkout)
#   - Installed: ~/.local/lib/ (copied by install.sh)
_script_dir = Path(__file__).resolve().parent
_repo_pkg = _script_dir.parent / "zeus"
if _repo_pkg.is_dir() and (_repo_pkg / "__init__.py").exists():
    sys.path.insert(0, str(_script_dir.parent))
else:
    sys.path.insert(0, str(Path.home() / ".local" / "lib"))

from zeus.main import main

main()
